{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "This template validate parameters.",
    "Parameters": {
        "QSS3BucketName": {
            "Type": "String"
        },
        "QSS3KeyPrefix": {
            "Type": "String"
        },
        "CustomIdentifier": {
            "Type": "String"
        },
        "FortiWebAsgCapacityBYOL": {
            "Type": "Number"
        },
        "FortiWebAsgDesiredCapacityOnDemand": {
            "Type": "Number"
        },
        "FortiWebAsgMinSizeOnDemand": {
            "Type": "Number"
        },
        "FortiWebAsgMaxSizeOnDemand": {
            "Type": "Number"
        },
        "FortiWebAsgScaleInThreshold": {
            "Type": "Number"
        },
        "FortiWebAsgScaleOutThreshold": {
            "Type": "Number"
        },
        "FortiWebVersionShow": {
            "Type": "String"
        },
        "AddNewElasticIPorNot": {
            "Type": "String"
        },
        "FortiWebElasticIP": {
            "Type": "String"
        }
    },
    "Resources": {
        "callValidateParameters": {
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "validateFunction",
                        "Arn"
                    ]
                },
                "FortiWebAsgCapacityBYOL": {
                    "Ref": "FortiWebAsgCapacityBYOL"
                },
                "FortiWebAsgDesiredCapacityOnDemand": {
                    "Ref": "FortiWebAsgDesiredCapacityOnDemand"
                },
                "FortiWebAsgMinSizeOnDemand": {
                    "Ref": "FortiWebAsgMinSizeOnDemand"
                },
                "FortiWebAsgMaxSizeOnDemand": {
                    "Ref": "FortiWebAsgMaxSizeOnDemand"
                },
                "FortiWebAsgScaleInThreshold": {
                    "Ref": "FortiWebAsgScaleInThreshold"
                },
                "FortiWebAsgScaleOutThreshold": {
                    "Ref": "FortiWebAsgScaleOutThreshold"
                },
                "FortiWebVersionShow": {
                    "Ref": "FortiWebVersionShow"
                },
                "AddNewElasticIPorNot": {
                    "Ref": "AddNewElasticIPorNot"
                },
                "FortiWebElasticIP": {
                    "Ref": "FortiWebElasticIP"
                }
            },
            "Type": "AWS::CloudFormation::CustomResource"
        },
        "validateFunction": {
            "Properties": {
                "FunctionName": {
                    "Fn::Join": [
                        "-",
                        [
                            {
                                "Ref": "CustomIdentifier"
                            },
                            "validateParam",
                            {
                                "Fn::Select": [
                                    0,
                                    {
                                        "Fn::Split": [
                                            "-",
                                            {
                                                "Fn::Select": [
                                                    2,
                                                    {
                                                        "Fn::Split": [
                                                            "/",
                                                            {
                                                                "Ref": "AWS::StackId"
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    ]
                },
                "Description": "validate autoscaling parameters",
                "Handler": "validate_lambda.handler",
                "Role": {
                    "Fn::GetAtt": [
                        "validateFuncRole",
                        "Arn"
                    ]
                },
                "Runtime": "python3.6",
                "Timeout": 240,
                "Code": {
                    "S3Bucket": {
                        "Ref": "QSS3BucketName"
                    },
                    "S3Key": {
                        "Fn::Sub": [
                            "${QSS3KeyPrefix}functions/packages/validate_lambda.zip",
                            {
                                "QSS3KeyPrefix": {
                                    "Ref": "QSS3KeyPrefix"
                                }
                            }
                        ]
                    }
                }
            },
            "Type": "AWS::Lambda::Function"
        },
        "validateFuncRole": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": "sts:AssumeRole",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "lambda.amazonaws.com"
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"
                ],
                "Path": "/",
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Statement": [
                                {
                                    "Action": [
                                        "logs:*"
                                    ],
                                    "Effect": "Allow",
                                    "Resource": "*"
                                }
                            ],
                            "Version": "2012-10-17"
                        },
                        "PolicyName": "object-validate"
                    }
                ]
            },
            "Type": "AWS::IAM::Role"
        }
    },
    "Outputs": {
        "FortiWebVersionInternal": {
            "Description": "FortiWebVersionInternal",
            "Value": {
                "Fn::GetAtt": [
                    "callValidateParameters",
                    "FortiWebVersionInternal"
                ]
            }
        }
    }
}
